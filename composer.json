{
    "name": "custom-mcp/mysql-server",
    "description": "Serveur MCP MySQL rÃ©utilisable avec configuration par variables d'environnement",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "php-mcp/server": "^3.3",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "MySqlMcp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MySqlMcp\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    }
}