# Configuration pour serveur de test
MYSQL_HOST=127.0.0.1
MYSQL_PORT=33099
MYSQL_USER=mcpusertest
MYSQL_PASS=tototugoi
MYSQL_DB=mcptesttable

# Permissions pour les tests (tout autorisé)
ALLOW_INSERT_OPERATION=true
ALLOW_UPDATE_OPERATION=true
ALLOW_DELETE_OPERATION=true
ALLOW_TRUNCATE_OPERATION=false

# Configuration sécurisée pour tests
QUERY_TIMEOUT=30
MAX_RESULTS=1000
ALLOWED_SCHEMAS=mcptesttable
BLOCK_DANGEROUS_KEYWORDS=true
ENABLE_QUERY_LOGGING=true

# Performance
CONNECTION_POOL_SIZE=3
CACHE_TTL=300
ENABLE_QUERY_CACHE=true

# Fonctionnalités activées
ENABLE_TRANSACTIONS=true
ENABLE_PREPARED_STATEMENTS=true
ENABLE_SCHEMA_INTROSPECTION=true
ENABLE_EXPORT_TOOLS=true

# Logging pour debug
LOG_LEVEL=DEBUG