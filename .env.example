# MySQL MCP Server Configuration
# Copy to .env and adjust values for your environment

# === CONNEXION MYSQL ===
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASS=your_password
MYSQL_DB=                          # Leave empty for multi-DB mode

# === PERMISSIONS CRUD ===
ALLOW_INSERT_OPERATION=false
ALLOW_UPDATE_OPERATION=false
ALLOW_DELETE_OPERATION=false
ALLOW_TRUNCATE_OPERATION=false

# === SÉCURITÉ ===
QUERY_TIMEOUT=30
MAX_RESULTS=1000
ALLOWED_SCHEMAS=                   # Comma-separated list, empty = all allowed
BLOCK_DANGEROUS_KEYWORDS=true
ENABLE_QUERY_LOGGING=true

# === PERFORMANCE ===
CONNECTION_POOL_SIZE=5
CACHE_TTL=300
ENABLE_QUERY_CACHE=true

# === FONCTIONNALITÉS ===
ENABLE_TRANSACTIONS=true
ENABLE_PREPARED_STATEMENTS=true
ENABLE_SCHEMA_INTROSPECTION=true
ENABLE_EXPORT_TOOLS=true

# === LOGGING ===
LOG_LEVEL=INFO                     # DEBUG, INFO, WARN, ERROR
LOG_FILE=                          # Leave empty for STDERR